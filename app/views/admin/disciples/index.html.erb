<table class="table">
  <thead>
    <tr>
      <th scope="col">Духовное имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Адрес</th>
      <th scope="col">Мурти вручено</th>
    </tr>
  </thead>
  <tbody>
    <% @disciples.each do |disciple| %>
      <tr>
        <td><%= disciple.name %></td>
        <td><%= disciple.phone %></td>
        <td><%= disciple.address %></td>
        <td><%= disciple.murti ? "Да" : "Нет" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
