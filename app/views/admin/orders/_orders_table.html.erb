<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Имя заказчика</th>
      <th scope="col">Телефон</th>
      <th scope="col">Почта</th>
      <th scope="col">Оплаченная сумма</th>
      <th scope="col">Комиссия</th>
      <th scope="col">Способ оплаты</th>
      <th scope="col">Адрес доставки</th>
      <th scope="col">Трек номер посылки</th>
      <th scope="col">Ученик ШП</th>
      <th scope="col">Дата создания</th>
      <th scope="col">Статус</th>
      <th scope="col">Операции</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th scope="row"><%= order.id %></th>
        <td><%= order.client_name %></td>
        <td><%= order.phone %></td>
        <td><%= order.email %></td>
        <td><%= number_to_currency(order.payment_sum, unit: "руб", format: "%n %u", delimiter: " ") %></td>
        <td><%= number_to_currency(order.payment_fee, unit: "руб", format: "%n %u", delimiter: " ") %></td>
        <td><%= order.payment_method %></td>
        <td><%= order.address %></td>
        <td><%= order.track_number %></td>
        <td><%= order.disciple&.name %></td>
        <td><%= order.created_at.strftime("%b %d, %Y at %I:%M %p") %></td>
        <td><%= t "order.#{order.status}" %></td>
        <% if current_user.admin? %>
          <td>
            <a href="<%= edit_admin_order_path(order) %>">Редактировать</a>
            <%= link_to "Удалить", [:admin, order], data: {turbo_confirm: "Вы уверены?", turbo_method: :delete} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
